# -*- muttrc -*-
#
# Options
#

set mbox_type=Maildir
set include
set record=+Sent			    # Save outgoing messages to folder
set delete=ask-yes			    # Ask before deleting, preselecting 'yes'
set alias_file=~/.mutt/aliases  # Alias file
set forward_edit=ask-no
set text_flowed				    # Enable format=flowed for text/plain.
set mail_check_stats=yes
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/messages
set mail_check=60
set mailcap_path=~/.mutt/mailcap
unset confirmappend

